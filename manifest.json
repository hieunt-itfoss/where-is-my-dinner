{
  "name": "Đặt cơm đi bạn",
  "description": "I know you're lazy ass. So on behalf of you, I'll remind you to order your dinner on time. 💪",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Đặt cơm",
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "hot-pot-32.png",
    "128": "hot-pot-128.png"
  }
}
